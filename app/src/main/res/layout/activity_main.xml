<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fju.mid2.MainActivity">

    <Button
        android:id="@+id/b_funcion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能１"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/b_function2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能２"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_funcion1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/b_function3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="out"
        android:text="功能３"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_function2" />

    <Button
        android:id="@+id/b_function4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能４"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/b_function7"
        app:layout_constraintLeft_toRightOf="@+id/b_function2"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/b_function5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能５"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_function3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/b_function6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:onClick="out"
        android:text="功能６"
        app:layout_constraintLeft_toRightOf="@+id/b_function5"
        app:layout_constraintTop_toBottomOf="@+id/b_function8" />

    <Button
        android:id="@+id/b_function7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能７"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/b_funcion1"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/b_function8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="out"
        android:text="功能８"
        app:layout_constraintLeft_toRightOf="@+id/b_function3"
        app:layout_constraintTop_toBottomOf="@+id/b_function4" />

</android.support.constraint.ConstraintLayout>
